  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>bibliotecaaza</realm-name>
    <form-login-config>
      <form-login-page>/seguridad/login.jsp</form-login-page>
      <form-error-page>/seguridad/credencialesnovalidas.jsp</form-error-page>
